                markup: True
        BoxLayout:
            orientation:'vertical'
            size_hint: (0.2,1)
            Label:
                text: 'Válvula 4'
                halign: 'center'
                yalign: 'top'
                markup: True
        BoxLayout:
            orientation:'vertical'
            size_hint: (0.2,1)
            Label:
                text: 'Válvula 5'
                halign: 'center'
                yalign: 'top'
                markup: True
        BoxLayout:
            orientation:'vertical'
            size_hint: (0.2,1)
            Label:
                text: 'Válvula 6'
                halign: 'center'
                yalign: 'top'
                markup: True
        Button:
            text:'Fechar'
            size_hint: (0.2,0.1)
            on_release: root.dismiss()

<LabeledCheckBoxControl>:
    orientation: 'horizontal'
    size_hint: (0.05,1)
